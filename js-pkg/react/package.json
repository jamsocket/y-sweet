{
  "name": "@y-sweet/react",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx}\"",
    "prepublishOnly": "npm run build"
  },
  "version": "0.8.1",
  "description": "React library for building collaboration features with y-sweet.",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/main.d.mts",
        "default": "./dist/main.mjs"
      },
      "require": {
        "types": "./dist/main.d.ts",
        "module": "./dist/main.mjs",
        "default": "./dist/main.js"
      }
    }
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/drifting-in-space/y-sweet",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drifting-in-space/y-sweet.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.14",
    "prettier": "^3.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "bugs": {
    "url": "https://github.com/drifting-in-space/y-sweet/issues"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18 || ^19 || ^19.0.0-rc",
    "yjs": "^13"
  },
  "dependencies": {
    "@y-sweet/client": "0.8.1",
    "@y-sweet/sdk": "0.8.1",
    "y-protocols": "^1.0.5"
  }
}
