{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es2019", "dom"],
      "outDir": "dist",
      "rootDir": "src",
      "jsx": "react-jsx",
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": false,
      "isolatedModules": true,
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "strict": true,
      "module": "esnext"
    },
    "include": [
      "."
    ],
    "exclude": [
        "dist",
        "node_modules",
    ]
  }
